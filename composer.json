{
    "name": "omroepgelderland/phpstdlib",
    "description": "Shared PHP functions",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Remy Glaser",
            "email": "rglaser@gld.nl"
        }
    ],
    "minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"gldstdlib\\": "src/"
		},
		"files": [
			"src/functions.php",
            "src/safe/dir.php",
            "src/safe/fileinfo.php",
            "src/safe/filesystem.php",
            "src/safe/ftp.php",
            "src/safe/iconv.php",
            "src/safe/json.php",
            "src/safe/ldap.php",
            "src/safe/pcre.php"
		]
	},
    "require": {
        "php": ">=8.1",
        "ext-date": "*",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-pcre": "*",
        "aws/aws-sdk-php": "^3.334",
        "monolog/monolog": "^3.8",
        "catfan/medoo": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "squizlabs/php_codesniffer": "^3.11",
        "slevomat/coding-standard": "^8.15",
        "phpunit/phpunit": "^10.5"
    }
}
